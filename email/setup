sudo openssl req -x509 -nodes -days 365 -newkey rsa:2048 -keyout /etc/ssl/private/mail.key -out /etc/ssl/certs/mailcert.pem

/etc/ssl/certs/mailcert.pem
/etc/ssl/private/mail.key

